  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "rootDir": "src",
    "outDir": "lib"
  },
  "include": [
    "src",
    "typings"
  ]
}